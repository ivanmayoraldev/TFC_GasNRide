  <script>
    const input = document.getElementById("search-input");
    const inputDesktop = document.getElementById("search-input-desktop");
    const textos = ["Madrid", "Municipios", "Gasolineras", "Puntos de Interés"];
    let indiceTexto = 0;
    let indiceCaracter = 0;
    let borrando = false;
    let retraso = 150;

    function escribir() {
      if (!input || !inputDesktop) return;
      
      const textoActual = textos[indiceTexto];
      if (!borrando) {
        input.value = textoActual.slice(0, indiceCaracter + 1);
        inputDesktop.value = textoActual.slice(0, indiceCaracter + 1);
        indiceCaracter++;

        if (indiceCaracter === textoActual.length) {
          borrando = true;
          retraso = 1000;
        } else {
          retraso = 150;
        }
      } else {
        input.value = textoActual.slice(0, indiceCaracter - 1);
        inputDesktop.value = textoActual.slice(0, indiceCaracter - 1);
        indiceCaracter--;

        if (indiceCaracter === 0) {
          borrando = false;
          indiceTexto = (indiceTexto + 1) % textos.length;
          retraso = 500;
        } else {
          retraso = 100;
        }
      }
      setTimeout(escribir, retraso);
    }

    escribir();

    const imagenTema = document.getElementById('theme-image');
    const imagenTemaDesktop = document.getElementById('theme-image-desktop');
    
    if (imagenTema && imagenTemaDesktop) {
      const observador = new MutationObserver((mutaciones) => {
        mutaciones.forEach((mutacion) => {
          if (mutacion.attributeName === 'data-theme') {
            const esOscuro = document.documentElement.getAttribute('data-theme') === 'dark';
            const nuevaSrc = esOscuro ? '/Imagen Landing Page - Dark.png' : './imagenprincipal.png';
            imagenTema.src = nuevaSrc;
            imagenTemaDesktop.src = nuevaSrc;
          }
        });
      });

      observador.observe(document.documentElement, {
        attributes: true,
        attributeFilter: ['data-theme']
      });
    }
  </script>

